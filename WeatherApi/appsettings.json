{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient.IServiceLink": "Warning"
    }
  },
  "AllowedHosts": "*",

  "OpenweathermapApi": {
    "ApiKey": "api key here"
  },

  "Historicaldb": {
    "Enabled": true,
    "Sqlite": "Source=historicwt.db;",
    "TimeToFetch": "00:00",             // Fetch and save the day's forecast at midnight   
    "GeolocationsLat": [ "1", "2", "3" ], // these latitude values are fetched at {TimetoFetch} and saved in the historical database  
    "GeolocationsLot": [ "3", "2", "1" ] //  city1 corresponds to GeolocationsLat[0] and GeolocationsLot[0].
  },


  "ConnectionStrings": {
    "Redis" : "localhost:6379"
  }

}
